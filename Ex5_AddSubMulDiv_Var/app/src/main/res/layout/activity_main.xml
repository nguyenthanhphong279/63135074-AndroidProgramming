<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4CAF50"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="323dp"
        android:layout_height="58dp"
        android:gravity="center"
        android:text="Phép Tính Số Học"
        android:textSize="25dp"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="48dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="a:"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="65dp"
        tools:layout_editor_absoluteY="150dp" />

    <EditText
        android:id="@+id/editTextA"
        android:layout_width="253dp"
        android:layout_height="35dp"
        android:ems="10"
        android:inputType="text"
        tools:layout_editor_absoluteX="102dp"
        tools:layout_editor_absoluteY="142dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="b:"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="65dp"
        tools:layout_editor_absoluteY="219dp" />

    <EditText
        android:id="@+id/editTextB"
        android:layout_width="248dp"
        android:layout_height="35dp"
        android:ems="10"
        android:inputType="number"
        tools:layout_editor_absoluteX="112dp"
        tools:layout_editor_absoluteY="211dp" />

    <EditText
        android:id="@+id/textViewKQ"
        android:layout_width="314dp"
        android:layout_height="47dp"
        android:ems="10"
        android:inputType="number"
        tools:layout_editor_absoluteX="65dp"
        tools:layout_editor_absoluteY="389dp" />

    <Button
        android:id="@+id/buttonCong"
        android:layout_width="67dp"
        android:layout_height="35dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="28dp"
        android:onClick="XuLyCong"
        android:text="+"
        app:layout_constraintEnd_toStartOf="@+id/buttonTru"
        app:layout_constraintTop_toBottomOf="@+id/editTextB" />

    <Button
        android:id="@+id/buttonTru"
        android:layout_width="77dp"
        android:layout_height="31dp"
        android:text="-"
        tools:layout_editor_absoluteX="131dp"
        tools:layout_editor_absoluteY="294dp" />

    <Button
        android:id="@+id/buttonNhan"
        android:layout_width="78dp"
        android:layout_height="32dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="16dp"
        android:text="X"
        app:layout_constraintEnd_toStartOf="@+id/buttonChia"
        app:layout_constraintTop_toBottomOf="@+id/editTextB" />

    <Button
        android:id="@+id/buttonChia"
        android:layout_width="73dp"
        android:layout_height="31dp"
        android:layout_marginTop="48dp"
        android:text="/"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/editTextB"
        tools:layout_editor_absoluteX="322dp" />


</androidx.constraintlayout.widget.ConstraintLayout>